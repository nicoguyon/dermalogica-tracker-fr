# Configuration Cosmetique Scraper
# Copier ce fichier en .env et adapter les valeurs

# Playwright
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_SLOW_MO=100
PLAYWRIGHT_TIMEOUT=30000

# Scraping
SCRAPER_MAX_RETRIES=3
SCRAPER_RETRY_DELAY=2
SCRAPER_RATE_LIMIT_DELAY=1

# Base de données
DATABASE_PATH=~/cosmetique-scraper/data/products.db

# Exports
EXPORTS_DIR=~/cosmetique-scraper/exports

# Logs
LOG_LEVEL=INFO
LOG_DIR=~/cosmetique-scraper/logs

# Notifications (optionnel - pour futures fonctionnalités)
# ENABLE_NOTIFICATIONS=false
# WEBHOOK_URL=
# EMAIL_NOTIFICATIONS=
